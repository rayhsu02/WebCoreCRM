
@{
    ViewData["Title"] = "Customer";
}

<h2>Customer</h2>
<section ng-app="app">
    <div class="panel panel-primary" ng-controller="customerController">
        <div class="panel-heading panel-head">CUSTOMER</div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-lg-12">

                    <button type="submit"  class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add</button>
                    <button ng-click="toggleModal('Cancel')" class="btn btn-default">Cancel</button>
                </div>
            </div>
            <div class="row" >
                <div class="col-lg-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Company Name</th>
                                <th>Company Website</th>
                                <th>Primay Contact</th>
                                <th>{{title}}</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="customer in allCustomers">
                            <tr class="success">
                                <td>{{customer.customerId}}</td>
                                <td><a href="#" ng-click="">{{customer.companyName}}</a></td>
                                <td><a href="{{customer.websiteUrl}}">{{customer.websiteUrl}}</a></td>
                                <td>{{customer.customerId}}</td>
                                <td><button class="btn btn-primary">Edit</button></td>
                            </tr>
                          
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        @*<mymodal visible="showModal">
            Any additional data / buttons
        </mymodal>*@
        
        @*modal*@
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Add Customer</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="companyForm" id="companyForm" >
                            <fieldset>
                                <legend>Company Information</legend>
                                <div class="form-group">
                                    <label for="inputCompanyName" class="col-lg-3 control-label">Company Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" class="form-control" id="inputCompanyName" placeholder="Company Name" ng-model="newCompany.CompanyName" name="inputCompanyName" required>  
                                        <span class="text-danger" ng-show="companyForm.inputCompanyName.$touched && companyForm.inputCompanyName.$invalid">The company name is required.</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputWebsiteURL" class="col-lg-3 control-label">Website URL</label>
                                    <div class="col-lg-9">
                                        <input type="text" class="form-control" id="inputWebsiteURL" placeholder="Website URL" ng-model="newCompany.WebsiteUrl" name="inputWebsiteURL" required>
                                        <span class="text-danger" ng-show="companyForm.inputWebsiteURL.$touched && companyForm.inputWebsiteURL.$invalid">The website URL is required.</span>
                                        <label>{{newCompany}}</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="selectIndustry" class="col-lg-3 control-label">Industry</label>
                                    <div class="col-lg-9">
                                        <select class="form-control" id="selectIndustry" ng-model="newCompany.IndustryTypeId" >
                                            <option ng-repeat="industry in IndustryTypes" value="{{industry.Id}}">{{industry.Name}}</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Enterprise Client Designation</label>
                                    <div class="col-lg-9">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="optionsRadios" id="optionsRadios1" value="true" checked="" ng-model="newCompany.ClientDesignation">
                                                Yes
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="false" ng-model="newCompany.ClientDesignation">
                                                No
                                            </label>
                                        </div>
                                    </div>
                                </div>


                            </fieldset>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" ng-click="addCustomer(newCompany)" ng-disabled="companyForm.inputCompanyName.$invalid || companyForm.inputWebsiteURL.$invalid">
                            Save changes
                        </button>
                        @*<button type="button" class="btn btn-primary" ng-click="addCustomer(newCompany)" ng-disabled="companyForm.inputWebsiteURL.$dirty && companyForm.inputWebsiteURL.$invalid ||
  companyForm.inputCompanyName.$dirty && companyForm.inputCompanyName.$invalid">Save changes</button>*@
                    </div>
                </div>
            </div>
        </div>
        @*end of modal*@

        </div>
          
            
</section>



