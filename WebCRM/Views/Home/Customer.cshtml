                <div class="col-lg-12">

                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add</button>
                </div>
            </div>
            <div class="row" ng-controller="customerController">
                <div class="col-lg-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Company Name</th>
                                <th>Company Website</th>
                                <th>Customer Id</th>
                                <th>{{title}}</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="customer in allCustomers">
                            <tr class="success">
                                <td>1</td>
                                <td>{{customer.companyName}}</td>
                                <td>{{customer.websiteUrl}}</td>
                                <td>{{customer.customerId}}</td>
                                <td><button class="btn btn-primary">Edit</button></td>
