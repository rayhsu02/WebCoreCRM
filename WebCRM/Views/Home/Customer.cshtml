            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Add Customer</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Company Information</legend>
                                    <div class="form-group">
                                        <label for="inputCompanyName" class="col-lg-3 control-label">Company Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" id="inputCompanyName" placeholder="Company Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputWebsiteURL" class="col-lg-3 control-label">Website URL</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" id="inputWebsiteURL" placeholder="Website URL">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="selectIndustry" class="col-lg-3 control-label">Industry</label>
                                        <div class="col-lg-9">
                                            <select class="form-control" id="selectIndustry">
                                                <option>Health Care</option>
                                                <option>Auto</option>
                                                <option>Technology</option>
                                                <option>Banking</option>
                                                <option>Law</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Enterprise Client Designation</label>
                                        <div class="col-lg-9">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="optionYes" checked="">
                                                    Yes
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="optionNo">
                                                    No
                                                </label>
                                            </div>
                                        </div>
                                    </div>


                                </fieldset>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
</section>


